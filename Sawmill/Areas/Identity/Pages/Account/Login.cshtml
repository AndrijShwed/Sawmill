@page
@model LoginModel

@{
    ViewData["Title"] = "Увійти";
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <style>
        .back {
            background-image: url(/images/forest.jpg);
            width: 100%;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .row {
            margin: auto;
            min-width: 280px;
            max-width: 30%;
            border-radius: 5px;
            border: 1px solid aqua;
            padding: 20px;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6));
            box-shadow: 10px 10px 30px aqua;
        }

        button {
            opacity: 0.3;
        }
        button:hover {
            opacity: 0.7;
            transition: opacity 0.5s ease;
        }
    </style>

</head>
<body class="back">
            <div class="row">

                <section>
                    <form id="account" method="post">
                        <h2 style="color:aqua">Використовуйте свій акаунт для входу</h2>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3" style="opacity:0.8; border-radius:0.3em; background-color: azure">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3" style="opacity:0.8; border-radius:0.3em">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Пароль</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div style=" width:100%; background-color:azure; opacity:0.8; border-radius:0.2em">
                            <div class="checkbox mb-3" style="text-align:center">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"
                        style="margin-top:10px; background-color:aqua; color: black">Увійти</button>
                        
                        <div style="width:100%; background-color:azure; opacity:0.8; margin-top:10px; border-radius:0.3em">
                            <p style="text-align:center">
                                <a id="forgot-password" asp-page="./ForgotPassword" style="color:black">Забули свій пароль?</a>
                            </p>
                        </div>
                        <div style="width:100%; background-color:azure; opacity:0.8; margin-top:10px; border-radius:0.3em">
                            <p style="text-align:center">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color:black">Зареєструватись</a>
                            </p>
                        </div>
                        <div style="width:100%; background-color:azure; opacity:0.8; margin-top:10px; border-radius:0.3em">
                            <p style="text-align:center">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color:black">Надіслати повторний лист на ел.пошту для підтвердження</a>
                            </p>
                        </div>
                    </form>
                </section>


            </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
