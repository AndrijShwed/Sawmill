@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Надіслати повторно лист підтвердження на ел. пошту";
}
<!DOCTYPE html>


<html>
<head>
    <meta name="viewport" content="width=device-width">
    <style>
        .back {
            background-image: url(/images/forest.jpg);
            width: 100%;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .row {
            margin: auto;
            min-width: 250px;
            max-width: 30%;
            border-radius: 5px;
            border: 1px solid aqua;
            padding: 20px;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6));
            box-shadow: 10px 10px 30px aqua;
        }

        button {
            opacity: 0.3;
        }

            button:hover {
                opacity: 0.7;
                transition: opacity 0.5s ease;
            }

    </style>
</head>
<body class="back">
    <div class="row">
        <h2 style="color:aqua">Введіть свій email</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3" style="opacity:0.8">
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary"
                    style="background-color:aqua; color: black">Надіслати
                </button>
            </form>
        
    </div>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
