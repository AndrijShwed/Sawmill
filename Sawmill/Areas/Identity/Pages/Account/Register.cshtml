@page
@model RegisterModel
@{
    ViewData["Title"] = "Реєстрація";
    
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width">
    <style>
        .back {
            background-image: url(images/forest.jpg);
            width: 100%;
            background-repeat: no-repeat;
            background-size: cover;
          
        }
        .row{
            margin: auto;
            min-width:250px;
            max-width:30%;
            border-radius:5px;
            border: 1px solid aqua;
            padding:20px;
            background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6));
            box-shadow: 10px 10px 30px aqua;
        }
        button{
            opacity:0.3;
            
        }
        button:hover{
            opacity:0.7;
            transition: opacity 0.5s ease;
        }

    </style>
   
</head>
<body class="back">
    
        <div class="row">
            <h1 style="color:aqua">@ViewData["Title"]</h1>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3" style="opacity:0.8">
                        <input asp-for="Input.Email" class=" form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3" style="opacity:0.8">
                        <input asp-for="Input.PhoneNumber" type="tel" class=" form-control phone" placeholder="phone" />
                        <label asp-for="Input.PhoneNumber">Номер телефону</label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3" style="opacity:0.8">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Пароль</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3" style="opacity:0.8">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Підтвердити пароль</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary"
                    style="background-color:aqua; color: black">Зареєструватись</button>
                </form>
               
        </div>
   
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
