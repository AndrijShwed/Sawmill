@page
@model Sawmill.Pages.Contacts.IndexModel

@{
    ViewData["Title"] = "Контакти";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        .image {
            width: 20px;
            height: 25px;
            padding-bottom: 5px;
        }

        .block {
            height: 100vh;
            background-image: url(/images/Фон_1.jpg);
            background-repeat: no-repeat;
            background-size: cover;
        }

        .conty {
            display: flex;
            justify-content: center;
            /*  align-items: center; */
            /*  height:100vh; */
        }

        .row {
            display: inline-block;
            border-radius: 5px;
            border: 1px solid aqua;
            padding: 10px;
            background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3));
            box-shadow: 10px 10px 30px aqua;
        }
        
        .itemLi {
            font-size: x-large;
            color: aqua
        }
        .itemLi:hover {
            background-color:cadetblue;
        }
    </style>
    <meta charset="utf-8" />

</head>
<body class="block">
    <div class="conty">
        <div class="row">
            <h1 style="color:aqua">Наші контакти</h1>
            @foreach (var item in Model.Contact)
            {
                if (item.Name == "Phone")
                {
                    <p style="font-size:x-large; color:aqua">
                        тел: @item.Value <pb> </pb> <img class="image" src="~/images/viber.png" /><pb> </pb>
                                                <img class="image" src="~/images/telegram.png" /><pb> </pb>
                                                <img class="image" src="~/images/whatsapp.png" /><pb> </pb>
                                  @if (User.Identity.IsAuthenticated && User.Identity.Name == "Admin@ukr.net")
                                  {
                                        <a asp-page="./Edit" asp-route-id="@item.Id" class="itemLi">Edit</a> <pb>|</pb>
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="itemLi">Details</a> <pb>|</pb>
                                        <a asp-page="./Delete" asp-route-id="@item.Id" class="itemLi">Delete</a>
                                  }
                    </p>
                }
                else if (item.Name == "Email")
                {
                    <p style="font-size:x-large; color:aqua">
                        email: <a href="mailto: @item.Value" class="itemLi">@item.Value</a> <pb> </pb> <img class="image" src="~/images/email_1.jpg" /><pb> </pb>
                        @if (User.Identity.IsAuthenticated && User.Identity.Name == "Admin@ukr.net")
                        {
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="itemLi">Edit</a> <pb>|</pb>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="itemLi">Details</a> <pb>|</pb>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="itemLi">Delete</a>
                        }
                    </p>
                }
            }
        </div>
    </div>
</body>
</html>