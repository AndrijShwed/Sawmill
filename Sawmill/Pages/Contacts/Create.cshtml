@page
@model Sawmill.Pages.Contacts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div style="background-color:antiquewhite; width:100%; border-radius:0.2em ">
                    <b><label asp-for="Contact.Name" class="control-label"></label></b>
                </div>
                <select asp-for="Contact.Name" class="form-control">

                    <option disabled selected>Виберіть назву</option>
                    <option>Phone</option>
                    <option>Email</option>
                </select>
            </div>
            <div class="form-group">
                <div style="background-color:antiquewhite; width:100%; border-radius:0.2em ">
                    <b><label asp-for="Contact.Value" class="control-label"></label></b>
                </div>
                <input asp-for="Contact.Value" class="form-control" />
                <span asp-validation-for="Contact.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
