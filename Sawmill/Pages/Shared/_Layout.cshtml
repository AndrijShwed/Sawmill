<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .image {
            width: 18px;
            padding-bottom: 5px;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        .container {
            flex: 1;
            min-width: 100%;
           
        }

        header {
            position: fixed;
            padding: 0;
            z-index: 50;
          
            max-width: 100%;
        }

        main {
            padding: 80px 0 0 0;
        }

        .header_logo {
            flex: 0 0 50px;
            border-radius: 50%;
            overflow: hidden;
        }

            .header_logo img {
                max-width: 100%;
                display: block;
            }

        .navbar::before {
            content: ''; /* Важливо встановити контент для псевдоелементу */
            position: absolute;
            top: 0;
            left: 0;
            width: 100%; /* Розміри псевдоелементу збігаються з контейнером */
            height: 100%;
            background-color: rgba(255, 255, 255, 1); /* Колір фону для псевдоелементу без прозорості */
            z-index: -1; /* Помістіть псевдоелемент під контентом */
            border-radius: 6px;
        }

        .navbar {
            max-width: 100%;
            backdrop-filter: blur(10px);
        }

        .cont {
            min-width: 100%;
            margin-left: -13px;
        }
        
        .li-item:hover {
            background-color:cadetblue;
        }
 
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Пилорама</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
   

</head>
<body>
    <div class="container">
        <header class="cont">
            <nav class="navbar navbar-expand-sm navbar-toggler-sm navbar-light bg-opacity-10 box-shadow mb-3" style="padding:0; border-radius:10px; font-size:100%">
                <div class="container" style="background-color:aqua; border-radius:6px">
                    <a href="#" class="header_logo">
                        <img src="~/images/Logo.jpg" alt="" />
                    </a>
                    <div class="burger">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-left:5px; margin-right:5px">

                        <ul class="navbar-nav flex-grow-1" style="margin-right:5%">
                            
                            <li class="nav-item" style="margin-right:3%">
                                <div class="li-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                        <img class="image" src="~/images/home.png" /><pb> </pb>Головна
                                    </a>
                                </div>
                            </li>
                            
                            @if (User.Identity != null)
                            {
                                if (User.Identity.IsAuthenticated && User.Identity.Name != "Admin@ukr.net")
                                {
                                    <li class="nav-item" style="margin-right:3%">
                                        <div class="li-item">
                                            <a class="nav-link text-dark" asp-area="" asp-page="/Numbers/Index">
                                                <img class="image" src="~/images/shopping-cart.png" /><pb> </pb>Мої замовлення
                                            </a>
                                        </div>
                                    </li>
                                }
                            }
                            <li class="nav-item" style="margin-right:3%">
                                <div class="li-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Services/Index_1">
                                        <img class="image" src="~/images/repairing-service.png" /><pb> </pb>Послуги
                                    </a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <div class="li-item">
                                    <a class="nav-link text-dark" asp-area="" asp-page="/Contacts/Index">
                                        <img class="image" src="~/images/phone-call.png" /><pb> </pb>Контакти
                                    </a>
                                </div>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />

                    </div>

                </div>
            </nav>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">

        <h5 style="color:aqua"><b>&copy; 2023 - Пилорама</b>  - <a asp-area="" asp-page="/Privacy">Privacy</a></h5>

    </footer>

     <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
     <script src="~/js/site.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)

</body>


</html>