@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <div class="li-item">
                 <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Вітаємо  <b>@User.Identity?.Name!</b></a>
            </div>
        </li>
        <li class="nav-item">
            <div class="li-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link text-dark">Вийти</button>
                </form>
            </div>
        </li>
    }
    else
    {

        <li class="nav-item" style="margin-right:3px">
            <div class="li-item">
                 <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Зареєструватись</a>
            </div>
        </li>
        <li class="nav-item">
            <div class="li-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Увійти</a>
            </div>
        </li>

    }
</ul>

