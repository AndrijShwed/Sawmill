@page
@model IndexModel
@{
    ViewData["Title"] = "Домашня сторінка";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        body {
            margin: 0;
            padding: 0;
            overflow: auto;
        }

        video {
            position: fixed;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            z-index: -1;
            transform: translateX(-50%) translateY(-50%);
        }

        .button {
            font-family: Arial;
            text-decoration: none;
            position: relative;
            display: inline-block;
        }

        .button_text {
            position: relative;
            height: 30px;
            display: flex;
            justify-content: center;
            padding: 0px 10px;
            border-radius: 30px;
            font-size: 20px;
            text-transform: uppercase;
            color: black;
            letter-spacing: 3px;
            transition: all 1s ease 0s;
            top: 0px;
            overflow: hidden;
        }

            .button_text:before,
            .button_text:after {
                content: ' ';
                position: absolute;
                width: 50%;
                height: 100%;
                background-color: lightgray;
            }

            .button_text:before {
                left: 0;
                z-index: 2;
            }

            .button_text:after {
                right: 0;
            }

            .button_text span {
                position: relative;
                z-index: 2;
            }

        .button:hover .button_text:before,
        .button:hover .button_text:after {
            background-color: aqua;
        }

        .button:hover .button_text {
            top: -3px;
            color: firebrick;
            transition: all 0.5s ease 0.2s;
            box-shadow: 0 5px 0px 0 #0c5b56;
        }

        .button:active .button_text {
            top: 2px;
            transition: all 0.1s ease 0s;
            box-shadow: 0 2px 0px 0 #0c5b56;
        }

        .row {
            margin: auto;
            width: 80%;
            border-radius: 5px;
            border: 1px solid aqua;
            padding: 20px;
            background: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2));
            box-shadow: 10px 10px 30px aqua;
        }
    </style>

</head>
<body>
    <video autoplay loop muted>
        <source src="/images/Порізка.mp4" type="video/mp4" />
    </video>

    <div class="text-center">

        @if (User.Identity != null)
        {
            if (User.Identity.IsAuthenticated && User.Identity.Name != "Admin@ukr.net")
            {
                <div class="row">
                    <h2 class="display-4" style="font-style: unset; color:aqua "><b>Вітаємо на сайті замовлень пиломатеріалів</b></h2>
                </div>
                <div style="display:flex; justify-content:center; margin-top:10%">
                    <a asp-page="./Orders/IndexFirst" class="button">
                        <span class="button_text">
                            <span><b>Створити замовлення</b></span>
                        </span>
                    </a>
                </div>
            }
            else if (User.Identity.IsAuthenticated)
            {
                <h2 class="display-4" style="font-style: unset; color:aqua "><b>Вітаємо на сайті замовлень пиломатеріалів</b></h2>
                <ul class="text-sm-start" style="margin-top: 20px">
                    <li><a asp-page="./Admin/Index"><h4 style="font-style: unset; text-decoration: none; color:aqua">Переглянути замовлення</h4></a></li>
                    <li><a asp-page="./AdminNumbers/Index"><h4 style="font-style: unset; color:aqua">Опрацювати замовлення</h4></a></li>
                    <li><a asp-page="./Prices/Index"><h4 style="font-style: unset; color:aqua">Встановити або змінити ціну</h4></a></li>
                    <li><a asp-page="./Services/Index"><h4 style="font-style: unset; color:aqua">Додати вид послуг</h4></a></li>
                </ul>
            }
            else
            {
                <div class="row">
                    <h4 class="display-6" style="font-style: unset; color:aqua "><b>Вітаємо на сайті замовлень пиломатеріалів</b></h4>
                    <h6 class="display-6" style="font-style: unset; color:aqua "><b>Увійдіть або зареєструйтесь</b></h6>
                </div>
            }
        }

    </div>

</body>
</html>